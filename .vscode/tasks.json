{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run C++",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p '${workspaceFolder}/output' && /opt/homebrew/bin/g++-15 -std=c++17 -Wall -g '${file}' -o '${workspaceFolder}/output/${fileBasenameNoExtension}' && '${workspaceFolder}/output/${fileBasenameNoExtension}'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles and runs the active C++ file using g++-15",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}