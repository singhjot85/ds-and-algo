{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run C++",
            "type": "shell",
            "command": "/opt/homebrew/bin/g++-15",
            "args": [
                "-std=c++17",
                "-Wall",
                "-g", // enables debugging symbols
                "${file}",
                "-o",
                "${workspaceFolder}/output/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles the active C++ file using g++-15",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared", // uses same terminal for all runs
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "run executable",
            "type": "shell",
            "command": "${workspaceFolder}/output/${fileBasenameNoExtension}",
            "dependsOn": [
                "build and run C++"
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared", // same terminal
                "focus": true
            }
        }
    ]
}